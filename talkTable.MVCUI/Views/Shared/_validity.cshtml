@using talkTable.Entities.Entities
@model validity
<section class="customers" id="customers" style="background-image: url('@Model.validityPicturePath');">
    <div class="container">
        <div class="left" data-aos="slide-right" data-aos-delay="0">
            <div class="section-title">@Model.caption</div>
            <div class="section-desc">
                @Model.infoText
            </div>
            <div class="two-block row" data-aos="slide-up">
                @if (Model.validitySection.Any())
                {
                    foreach (var sec in Model.validitySection)
                    {
                        <div class="block col-md-6">
                            <div class="details">
                                <div class="title">
                                    @sec.caption
                                </div>
                                <div class="desc">
                                    @sec.infoText
                                </div>
                            </div>
                        </div>
                    }
                }


            </div>
        </div>
</section>

