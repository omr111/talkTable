
@{
    Layout = null;
}





<!DOCTYPE html>
<html lang="tr">
<head>
    <title>Hesap Kurtarma</title>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1">
    <!--===============================================================================================-->
    <link rel="icon" type="image/png" href="~/images/favicon.ico" />

    <!--===============================================================================================-->

    <link href="~/Areas/AdminPanel/context/admin-panel/assets/css/bootstrap.min.css" rel="stylesheet" />
    <!--===============================================================================================-->

    <link href="~/Areas/AdminPanel/context/admin-panel/assets/css/util.css" rel="stylesheet" />

    <link href="~/Areas/AdminPanel/context/admin-panel/assets/css/main.css" rel="stylesheet" />

    <!--===============================================================================================-->
</head>
<body>

    <div class="limiter">
        <div class="container-login100">
            <div class="wrap-login100">
                <table>
                    <tr>
                        <td colspan="2">
                            @ViewBag.Mesaj
                        </td>
                    </tr>

                </table>
                <form action="/AdminPanel/Giris/SifreSifirla" method="post" id="dur" class="login100-form validate-form" onsubmit="false">
                    @Html.AntiForgeryToken()
                    <div class="infoLogInUser col-md-12">
                        @if (ViewData["logInError"] != null)
                        {


                            <div class="col-sm-12">

                                <div class="alert  alert-danger alert-dismissible fade show" role="alert">
                                    <span class="badge badge-pill badge-success">Hata</span> @ViewData["logInError"].ToString()

                                </div>
                            </div>
                        }
                    </div>
                    <span class="login100-form-title p-b-34">
                        Hesap Kurtarma
                    </span>
                    <div class="wrap-input100 rs1-wrap-input100 validate-input m-b-20" data-validate="Type user name">
                        <input id="emailAd" class="input100" type="text" name="emailAddress" required="required" maxlength="70" placeholder="Email Adres...">
                        <span class="focus-input100"></span>
                    </div>


                    <div class="container-login100-form-btn" style="margin-bottom:20px;">
                        <button id="resetButton" type="submit" class="login100-form-btn">
                            Şifre Sıfırla
                        </button>
                    </div>

                    <div class="container-login100-form-btn">
                        <a href="/AdminPanel/Giris/GirisYap" class="login100-form-btn">
                            Giriş Sayfasına Dön
                        </a>
                    </div>




                </form>


                <div class="login100-more" style="background-image: url('/images/bg-01.jpg');">




                </div>

            </div>
        </div>
        <script src="~/Scripts/jquery-3.4.1.js"></script>
        <script src="~/Areas/AdminPanel/context/admin-panel/assets/js/jquery.unobtrusive-ajax.min.js"></script>
        <script type="text/javascript">
            $("#dur").submit(function (e) {
                e.preventDefault();
                var name = $("#emailAd").val();

                    $.ajax({
                        url: "/AdminPanel/Giris/SifreSifirla",
                        type: "POST",
                        data: { changeName: name },
                        success: function (data) {
                            alert(data);
                            setTimeout(function () { document.location.replace("/AdminPanel/Giris/GirisYap") }, 2000);

                        },
                        error: function (data) {
                            alert(data);
                        }
                    });




            });
        </script>




</body>
</html>

