
@{
    ViewBag.Title = "bannerIconEkle";
    Layout = "~/Areas/AdminPanel/Views/Shared/_adminLayout.cshtml";
}
@model int


@if (Session["bannerEklenemedi"] != null)
{
    string mesaj = (string)Session["bannerEklenemedi"];
    if (mesaj == "Resim Başarıyla Eklendi")
    {

        <div class="col-sm-12">

            <div class="alert  alert-success alert-dismissible fade show" role="alert">
                <span class="badge badge-pill badge-success">Başarılı</span> @mesaj
                <button type="button" class="close" data-dismiss="alert" aria-label="Close">
                    <span aria-hidden="true">&times;</span>
                </button>
            </div>
        </div>
        Session["bannerEklenemedi"] = null;
    }
    else
    {
        <div class="col-sm-12">
            <div class="alert  alert-danger alert-dismissible fade show" role="alert">
                <span class="badge badge-pill badge-danger">Hata</span> @mesaj
                <button type="button" class="close" data-dismiss="alert" aria-label="Close">
                    <span aria-hidden="true">&times;</span>';
                </button>
            </div>
        </div>
        Session["bannerEklenemedi"] = null;
    }



}

<h6 style="color:red;margin-left:30px"> @Html.ValidationSummary(true)</h6>
<div class="alert"></div>
<div class="content mt-3">
    <div class="animated fadeIn">
        <form method="post" action="/AdminPanel/Banner/bannerIconEkle" enctype="multipart/form-data">
            @Html.AntiForgeryToken()

            <div class="row">

                <div class="col-xs-6 col-sm-6">
                    <div class="card">
                        <div class="card-header">
                            <strong>Kutu İkon</strong>
                        </div>

                        <div class="card-body card-block ">
                            <div class="form-group">
                                <label class=" form-control-label">Resim</label>
                                <div class="input-group">
                                    <div class="input-group-addon"><i class="fa fa-image"></i></div>
                                    <input class="form-control" type="file" name="bannerIcon">

                                </div>

                            </div>

                        </div>


                    </div>
                </div>
                <div class="col-xs-6 col-sm-6">
                    <div class="card">
                        <div class="card-header">
                            <strong>Kutu İçeriği Ekle</strong>
                        </div>

                        <div class="card-body card-block">

                            @Html.Hidden("bannerId", @Model)




                            <div class="form-group">
                                <label class=" form-control-label">Buton İsmi</label>
                                <div class="input-group">
                                    <div class="input-group-addon"><i class="fa fa-file-text"></i></div>
                                    <input class="form-control" type="text" name="boxOnButtonValue" required maxlength="15">
                                    @Html.ValidationMessage("boxOnButtonValue", "", new { @style = "color:red" })
                                </div>

                            </div>
                            <div class="form-group">
                                <label class=" form-control-label">Kutu İçi Makale</label>
                                <div class="input-group">
                                    <div class="input-group-addon"><i class="fa fa-file-archive-o"></i></div>
                                    <textarea class="form-control" type="text" name="boxInText" required maxlength="250"></textarea>

                                </div>
                                @Html.ValidationMessage("boxInText", "", new { @style = "color:red" })
                            </div>


                            <div class="form-group">

                                <input id="bannerAdd" type="submit" class="btn btn-success" style="float: right" value="Kaydet" />
                               
                            </div>

                        </div>

                    </div>
                </div>

            </div><!--row end-->
        </form>
    </div><!-- .animated -->
</div>





