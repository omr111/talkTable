
@{
    ViewBag.Title = "nasilCalisirIconEkle";
    Layout = "~/Areas/AdminPanel/Views/Shared/_adminLayout.cshtml";
}



@using talkTable.Entities.Entities
@model howIsWorkIcon

@if (Session["bannerEklenemedi"] != null)
{
    string mesaj = (string)Session["bannerEklenemedi"];
    if (mesaj == "İkon Başarıyla Eklendi")
    {

        <div class="col-sm-12">

            <div class="alert  alert-success alert-dismissible fade show" role="alert">
                <span class="badge badge-pill badge-success">Başarılı</span> @mesaj
                <button type="button" class="close" data-dismiss="alert" aria-label="Close">
                    <span aria-hidden="true">&times;</span>
                </button>
            </div>
        </div>
        Session["bannerEklenemedi"] = null;
    }
    else
    {
        <div class="col-sm-12">
            <div class="alert  alert-danger alert-dismissible fade show" role="alert">
                <span class="badge badge-pill badge-danger">Hata</span> @mesaj
                <button type="button" class="close" data-dismiss="alert" aria-label="Close">
                    <span aria-hidden="true">&times;</span>';
                </button>
            </div>
        </div>
        Session["bannerEklenemedi"] = null;
    }



}


<div class="alert"></div>
<div class="content mt-3">
    <div class="animated fadeIn">
        <form method="post" action="/AdminPanel/NasilCalisir/nasilCalisirIconEkle" enctype="multipart/form-data">
            @Html.AntiForgeryToken()

            <div class="row">

                <div class="col-xs-6 col-sm-6">
                    <div class="card">
                        <div class="card-header">
                            <strong>Resim</strong>
                        </div>

                        <div class="card-body card-block ">
                            <div class="form-group">
                                <label class=" form-control-label">Resim</label>
                                <div class="input-group">
                                    <div class="input-group-addon"><i class="fa fa-image"></i></div>
                                    <input class="form-control" type="file" name="file">

                                </div>

                            </div>

                        </div>


                    </div>
                </div>
                <div class="col-xs-6 col-sm-6">
                    <div class="card">
                        <div class="card-header">
                            <strong>İkon Açıklama</strong>
                        </div>

                        <div class="card-body card-block">

                            <div class="form-group">
                                <label class=" form-control-label">Açıklama</label>
                                <div class="input-group">
                                    <div class="input-group-addon"><i class="fa fa-file-text"></i></div>
                                    <input class="form-control" type="text" name="iconText" required maxlength="50" />
                                    @Html.ValidationMessageFor(m => m.iconText, "", new { @style = "color:red" })
                                </div>
                                @Html.HiddenFor(m => m.howIsWorkId)
                            </div>


                            <div class="form-group">

                                <input type="submit" class="btn btn-success" style="float: right" value="Kaydet" />

                            </div>

                        </div>

                    </div>
                </div>

            </div><!--row end-->
        </form>
    </div><!-- .animated -->
</div>



